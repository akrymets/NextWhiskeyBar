doctype html
html
    head
        title Places page
    body
        h2 List of known places
        ul
        each place in places
            li= place['name']
        h2 Add a new place
        form(
            method="post"
            action="/places"
            )
            fieldset
                legend Place details
                p
                label(for="plc[name]") Place name:
                    input(type="text", name="plc[name]", value="")
                p
                label(for="plc[distance]") Distance (km):
                    input(type="text", name="plc[distance]", value="")
            p.buttons
                input(type="submit", value="Save")
