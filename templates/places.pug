doctype html
html
    head
        title Заведения 
        link(rel='stylesheet', type='text/css', href='styles/main.css')
    body
        h2 Список заведений
        table
            each place in places
                tr
                    td    
                        a(href='/places/' + place['_id'])= place['name']
                    td
                        a(href='/places/delete/' + place['_id'])= 'x'
        h2 Добавить заведение
        form(action='/places/add', method='POST')
            table
                tr
                    td
                        label(for='name') Название
                    td        
                        input(type='edit', name='name', placeholder='Введите название')
                tr
                    td
                        label(for='dist') Удаленность в км
                    td
                        input(type='edit', name='dist', placeholder='Сколько пилить?')
                tr
                    td(colspan=2)
                        input(type='submit', value='Добавить')